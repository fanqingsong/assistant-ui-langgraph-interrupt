# Assistant UI LangGraph 环境变量配置
# 复制此文件为 .env 并填入实际配置值

# =============================================================================
# 后端配置 (Backend Configuration)
# =============================================================================

# LangGraph 配置
LANGGRAPH_ENV=development
LANGGRAPH_HOST=0.0.0.0
LANGGRAPH_PORT=8000

# Azure OpenAI 配置
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# 后端其他环境变量
DEBUG=true
LOG_LEVEL=info

# =============================================================================
# 前端配置 (Frontend Configuration)
# =============================================================================

# Next.js 配置
NODE_ENV=production
NEXT_PUBLIC_LANGGRAPH_URL=http://localhost:8000

# 前端其他环境变量
NEXT_PUBLIC_APP_NAME=Assistant UI LangGraph

# =============================================================================
# Docker Compose 配置 (Docker Compose Configuration)
# =============================================================================

# 服务端口配置
FRONTEND_PORT=3000
BACKEND_PORT=8000
# Nginx 代理端口 (默认: 80)
NGINX_PORT=80
# Nginx SSL 端口 (默认: 443)
NGINX_SSL_PORT=443
# Nginx 开发环境端口 (默认: 8080)
NGINX_DEV_PORT=8080

# 网络配置
NETWORK_NAME=app-network

# =============================================================================
# 开发环境配置 (Development Environment)
# =============================================================================

# 开发模式配置
DEV_MODE=false
HOT_RELOAD=true
WATCH_MODE=true

# =============================================================================
# 生产环境配置 (Production Environment)
# =============================================================================

# 生产模式配置
PRODUCTION_MODE=false
ENABLE_LOGGING=true
LOG_LEVEL_PROD=info

# =============================================================================
# 安全配置 (Security Configuration)
# =============================================================================

# 安全相关配置
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000
SECRET_KEY=your_secret_key_here

# =============================================================================
# 监控配置 (Monitoring Configuration)
# =============================================================================

# 健康检查配置
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# =============================================================================
# 日志配置 (Logging Configuration)
# =============================================================================

# 日志配置
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5
